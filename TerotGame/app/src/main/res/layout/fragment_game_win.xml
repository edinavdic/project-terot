<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".GameWinFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:textSize="10pt"
            android:text="You Won!\nUpdate stats by 1 point: " />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewStrength"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="8pt"
                android:text="STR: 15" />

            <ImageButton
                android:id="@+id/imageButtonAddStrength"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:background="@drawable/background_color"
                android:src="@drawable/button_plus"
                android:padding="0dp"
                android:scaleType="fitCenter" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewDexterity"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="8pt"
                android:text="DEX: 15" />

            <ImageButton
                android:id="@+id/imageButtonAddDexterity"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:background="@drawable/background_color"
                android:src="@drawable/button_plus"
                android:padding="0dp"
                android:scaleType="fitCenter" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewIntelligence"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="8pt"
                android:text="INT: 15" />

            <ImageButton
                android:id="@+id/imageButtonAddIntelligence"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:background="@drawable/background_color"
                android:src="@drawable/button_plus"
                android:padding="0dp"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButtonOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:background="@drawable/background_color"
            android:src="@drawable/button_ok"
            android:padding="0dp"
            android:scaleType="fitCenter" />

    </LinearLayout>


</FrameLayout>